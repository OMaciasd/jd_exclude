{
 "manifest_version": 3,
 "name": "LinkedIn Job Filter",
 "version": "1.0",
 "description": "Filtra empleos en LinkedIn según idioma, salario y ubicación.",
 "permissions": [
  "storage"
 ],
 "host_permissions": [
  "https://www.linkedin.com/*"
 ],
 "background": {
  "scripts": [
   "background.js"
  ],
  "persistent": false
 },
 "content_scripts": [
  {
   "matches": [
    "https://www.linkedin.com/jobs/*"
   ],
   "js": [
    "content.js"
   ]
  }
 ],
 "action": {
  "default_popup": "popup.html",
  "default_icon": "icon.png"
 },
 "icons": {
  "16": "icon.png",
  "48": "icon.png",
  "128": "icon.png"
 }
}
